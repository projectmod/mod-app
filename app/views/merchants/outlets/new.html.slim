.merchant-outlet
  .container-fluid
    .row
      .col-md-2.col-md-offset-5.col-xs-4.col-xs-offset-4
        p.text-center.step-style STEP 2 OF 3

      .col-md-8.col-md-offset-2.text-center
        h3 SALON INFO
        p.margin-remove.detail-text THESE DETAILS WILL APPEAR ON YOUR SALON PROFILE PAGE,
        p.detail-text AND WILL BE VISIBLE TO ALL MOD USERS.
  
    .row
      .col-md-6.col-md-offset-3
        = form_for [:merchants, @outlet], class: 'form' do |f|
          = f.hidden_field :edit_type, value: "new_account"
          .form-group
          = f.text_field :name, required: true, placeholder: 'SALON NAME', class: 'form-control merchant-signup'
          .form-group
          = f.text_field :area, required: true, placeholder: 'AREA (example, Bangsar Village II)', class: 'form-control merchant-signup'
          .form-group
          = f.text_field :address, required: true, placeholder: 'FULL ADDRESS', class: 'form-control merchant-signup'
          .form-group
          = f.text_field :phone_no, required: true, placeholder: 'SALON CONTACT NO.', class: 'form-control merchant-signup'
          .form-group
          = f.text_field :working_hours, required: true, placeholder: 'WORKING HOURS', class: 'form-control merchant-signup'
          .form-group.text-center
            = f.submit "NEXT", class: "btn btn-outlet"
