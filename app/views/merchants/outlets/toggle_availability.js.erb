$('#availability-links-desktop').remove()
$('#availability-links-mobile').remove()
<% if !current_user.outlet.availability %>
  $('#merchant-availability-button').removeClass('hidden')
<% else %>
  $('#merchant-availability-button').addClass('hidden')
<% end %>
$('#availability-container-desktop').html("<%= escape_javascript(render(partial: 'merchants/shared/partials_header/availability', locals: { outlet: current_user.outlet, device: 'desktop' })) %>")
$('#availability-container-mobile').html("<%= escape_javascript(render(partial: 'merchants/shared/partials_header/availability', locals: { outlet: current_user.outlet, device: 'mobile' })) %>")
$('#flash_messages').html("<%= escape_javascript(render(partial: 'shared/flash')) %>")
